<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainActivityLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.chucknorris.friendlycanvas.MainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollMain">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_image"
                android:src="@drawable/ic_action_add"
                android:onClick="backBtn"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brush"
                android:src="@drawable/ic_action_brush"
                android:onClick="brush"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clean"
                android:src="@drawable/ic_action_reload"
                android:onClick="resetBtn"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save"
                android:src="@drawable/ic_action_save"
                android:onClick="saveBtn"
                android:visibility="gone"/>
            <ImageButton
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/red"
                android:background="#FFFF0000"
                android:onClick="redColor" />
            <ImageButton
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/green"
                android:background="#FF00FF00"
                android:onClick="greenColor" />
            <ImageButton
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/blue"
                android:background="#FF0000FF"
                android:onClick="blueColor"/>
            <ImageButton
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/blue1"
                android:background="#FF000000"
                android:onClick="blackColor"/>
            <ImageButton
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/blue2"
                android:background="#FFFFFFFF"
                android:onClick="whiteColor"/>
            <ImageButton
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/purple"
                android:background="#FF7F00FF"
                android:onClick="purpleColor"/>
            <ImageButton
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/orange"
                android:background="#FFFFA500"
                android:onClick="orangeColor"/>
            <ImageButton
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/yellow"
                android:background="#FFFFFF00"
                android:onClick="yellowColor"/>

        </LinearLayout>
    </HorizontalScrollView>

    <com.example.chucknorris.friendlycanvas.Drawing
        android:id="@+id/drawing"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

</LinearLayout>
